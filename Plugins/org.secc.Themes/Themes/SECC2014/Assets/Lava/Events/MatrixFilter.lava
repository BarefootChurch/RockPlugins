{% comment %}
    ******* Filtering System for Calendar *******
{% endcomment %}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12" >
            <div class="filterbox">

                <div class="row">
                    <div class="col-xs-12">
                        <h3>Whatâ€™s your next step?</h3>
                        <p>Find a group or event that interests you by selecting a campus and/or ministry below. Click on the image to see more details or to register.</p>
                        <br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-md-6 col-lg-6" >
                        <br />
                        <h4 class="uppercase">Events From</h4>
                        <select class="select2-campuses" name="campus">
                        <option value="allMinistries">All Campuses</option>
                        <option value="920">Blankenbaker</option>
                        <option value="IN">Indiana</option>
                        <option value="CW">Crestwood</option>
                        <option value="SW">Southwest</option>
                        <option value="LA">La Grange</option>
                        <option value="ET">Elizabethtown</option>
                        </select>
                    </div>

                    <div class="col-xs-12 col-md-6 col-lg-6" >
                        <br />
                        <h4 class="uppercase">Select a Ministry</h4>
                        <select class="select2-ministries" name="minitry">
                        <option value="allMinistries">All Ministries</option>
                        <option value="connection">Connection</option>
                        <option value="men">Men</option>
                        <option value="women">Women</option>
                        <option value="seniors">Seniors</option>
                        <option value="family">Family</option>
                        <option value="children">Children</option>
                        <option value="students">Students</option>
                        <option value="missions">Missions</option>
                        <option value="generousLiving">Generous Living</option>
                        <option value="care">Care</option>
                        <option value="deafNdisabilities">Deaf &amp; Disabilities</option>
                        <option value="sportsNfitness">Sports & Fitness</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <br />
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// In your Javascript (external .js resource or <script> tag)
$(document).ready(function() {
    $('.select2-campuses').select2();
    $('.select2-ministries').select2();
});
</script>
